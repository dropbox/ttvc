{
  "compilerOptions": {
    "outDir": "/dev/null",
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "es2020",
    "declaration": true,
    "checkJs": true,
    "paths": {
      "/dist/*": ["./dist/*"]
    }
  },
  "exclude": ["lib", "dist"]
}
